{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "description": "base config containing source and build paths",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "window-debug",
            "displayName": "Window Debug",
            "description": "Target Windows with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_CXX_FLAGS": "/permissive /W4 /w14640"
            }
        },
        {
            "name": "window-release",
            "displayName": "Window Release",
            "description": "Target Windows with the Visual Studio development environment. (release)",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "linux-base",
            "description": "Target Linux with the Makefile environment.",
            "hidden": true,
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Target Linux with Makefile environment. (Debug)",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS":true,
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wshadow -Wnon-virtual-dtor -pedantic"

            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux release",
            "description": "Target Linux with Makefile environment. (release)",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-base",
            "description": "Target MacOS with the Xcode development environment.",
            "hidden": true,
            "inherits": "base",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "macos-debug",
            "displayName": "MacOS debug",
            "description": "Target MacOS with Xcode development environment. (debug)",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wshadow -Wnon-virtual-dtor -pedantic"
            }
        },
                {
            "name": "macos-release",
            "displayName": "Linux release",
            "description": "Target Linux with Xcode development environment. (release)",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        }
    ]
}
