{
  "version": 3,
  "configurePresets": [
    {
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "hidden": true,
      "name": "base"
    },
    {
      "name": "windows-base",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "Windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "Windows-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "Msys2",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      }
    },
    {
      "name": "Msys2-debug",
      "displayName": "Msys2 Debug",
      "inherits": "Msys2",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Msys2-release",
      "displayName": "Msys2 Release",
      "inherits": "Msys2-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "Clang",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang.exe",
        "CMAKE_CXX_COMPILER": "clang++.exe"
      }
    },
    {
      "name": "Clang-debug",
      "displayName": "Clang Debug",
      "inherits": "Clang",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Clang-release",
      "displayName": "Clang Release",
      "inherits": "Clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
