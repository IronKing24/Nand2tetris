<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 http://maven.apache.org/xsd/assembly-2.2.0.xsd">
  
  <id>distribution</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.nand2tetris:BuiltInChips</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.nand2tetris:BuiltInVMCode</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.nand2tetris:MainClasses</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/bin/classes/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.nand2tetris:Hack</include>
        <include>org.nand2tetris:HackGUI</include>
        <include>org.nand2tetris:Compilers</include>
        <include>org.nand2tetris:Simulators</include>
        <include>org.nand2tetris:SimulatorsGUI</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/bin/lib/</outputDirectory>
    </dependencySet>
  </dependencySets>
  
  <fileSets>
    <fileSet>
      <directory>src/main/resources/builtInChips</directory>
      <outputDirectory>builtInChips</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/OS</directory>
      <outputDirectory>OS</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/help</directory>
      <outputDirectory>bin/help</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/images</directory>
      <outputDirectory>bin/images</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/scripts</directory>
      <outputDirectory>bin/scripts</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/resources/Readme.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>

</assembly>